        if ircmsg.find ("!desc") != -1:
            sendmsg(channel, "This bot was created for those of you people who can't make a bot or are in need of a simple yet effective bot.")
	
        if ircmsg.find ("!github") != -1:
            sendmsg(channel, "My github source code is: https://github.com/0-Eclipse-0/SaltBot-Python! \n")

        if ircmsg.find ("Ping") != -1:
            sendmsg(channel, "PONG! \n")

        if ircmsg.find ("!rekt str_split [1]") != -1:
            sendmsg(channel, " rekt str_split [1] \n")

        if ircmsg.find ("!slap str_split [1]") != -1:
            sendmsg(channel, " slapped str_split [1] with a large trout! \n")

        if ircmsg.find ("!botinfo") != -1:
            sendmsg(channel, "Version: 1.2.1; Language: Python; Author: Xenfor \n")

        if ircmsg.find ("!owner") != -1:
            sendmsg(channel, "My owner and creator is... ! \n")

        if ircmsg.find ("!contact") != -1:
                    sendmsg(channel, "Email: test@test.ru \n")
                    sendmsg(channel, "IRC Chat: #Test-Chat \n")
                    sendmsg(channel, "Phone Number: 7-123-456-7890 \n")
                    sendmsg(channel, "Forums: www.forums.ru \n")
                    sendmsg(channel, "Website: www.website.ru \n")
