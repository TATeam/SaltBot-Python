        if ircmsg.find ("Hello SaltBot") != -1:
            sendmsg(channel, "Hello! \n")

        if ircmsg.find ("Hey SaltBot") != -1:
            sendmsg(channel, "Hello! \n")

        if ircmsg.find ("Hi SaltBot") != -1:
            sendmsg(channel, "Hello! \n")
		
        if ircmsg.find ("Hola SaltBot") != -1:
            sendmsg(channel, "Hello! \n")

        if ircmsg.find ("Howdy SaltBot") != -1:
            sendmsg(channel, "Hello! \n")

        if ircmsg.find ("Sup SaltBot") != -1:
            sendmsg(channel, "Hello! \n")
# ==------------------------------------------------------------------------------------==
